# Exercise 1
first_name = 'Mohammed' 
last_name = 'Amusa'
full_name = 'Mohammed Amusa'
country = 'Nigeria'
city = 'Lagos'
age = 28
year = 2024
is_married = 'Married'
is_true = True
is_light_on = 50
print (first_name, last_name, full_name, country, city, age, year, is_married, is_true, is_light_on)
# Exercise 2
print (type({'Mohammed', 'Amusa', 'Mohammed Amusa', 'Nigeria', 'Lagos', 28, 2024, 'Married', True, 50}))
print (len(first_name)) # Checking length of first name
if len(first_name) > len(last_name): # Comparing lengths 
    print ('First Name is longer than Last Name')
elif len(first_name) < len(last_name):
    print ('First Name is shorter than Last Name')
else:
    print ('First name is the same length with Last Name')
    print (len(first_name)) 
#   Question 4
num_one = 5
num_two = 4 
num_total = num_one + num_two
print(num_total) 
num_diff = num_one - num_two
print(num_diff)
num_product = num_one * num_two
print(num_product)
num_div = num_one/num_two
print(num_div)
num_rem = num_two % num_one
print(num_rem)
num_exp = num_one ** num_two
print(num_exp)
num_floor = num_one // num_two
print(num_floor)
# Question 5 
import math
radius = 30 
area_of_circle = math.pi * (radius**2)
print(area_of_circle)
circum_of_circle = 2 * math.pi * radius
print(circum_of_circle)
input (radius)
